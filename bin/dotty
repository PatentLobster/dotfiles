#!/usr/bin/env zsh
#
# dotty
#
# 'dotty' handles dotfiles common tasks
#

source $DOTFILES/tools/pretty_print.sh

displayUsageAndExit() {
	echo "dotty -- dotfiles managment"
	echo ""
	echo "Usage: dotty [options]"
	echo ""
	echo "Options:"
	echo ""
	echo " -e, --edit		Open dotfiles directory for editing"
	echo " -o, --open		Open dotfiles directory in shell"
	echo " -h, --help		Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-o"|"--open")
			open "$DOTFILES"
			exit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$DOTFILES"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

info "Updating submodules"
$DOTFILES/tools/update.sh

